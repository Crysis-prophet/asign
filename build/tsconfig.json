  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
